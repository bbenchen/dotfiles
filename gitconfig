  name = Ben Chen
  email = 517926804@qq.com
  signingkey = 7443FCAA39EB6FD5
[github]
    user = bbenchen
[gitlab "gitlab.com/api"]
  user = bbenchen
[magit]
    extension = svn
[svn]
    rmdir = true
[includeIf "os:Darwin"]
  path = ~/.gitconfig_macos
[includeIf "os:Linux"]
  path = ~/.gitconfig_linux
