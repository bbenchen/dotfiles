# -*- mode: gitconfig -*-
[core]
    excludesfile = ~/.gitignore_global
    autocrlf = input
    ignorecase = false
    safecrlf = true
    editor = emacsclient -a=\\\"\\\"
    quotepath = false
    longpaths = true
  pager = delta --width ${FZF_PREVIEW_COLUMNS:-$COLUMNS}
[interactive]
    diffFilter = delta --color-only
[color]
    branch = auto
    diff = auto
    interactive = auto
    status = auto
[push]
    default = current
    recurseSubmodules = check
[delta]
    navigate = true
    line-numbers = true
    side-by-side = true
  true-color = always
[diff]
    tool = ediff
  colorMoved = default
[merge]
    tool = ediff
  conflictstyle = diff3
[fetch]
  prune = true
  pruneTags = true
[pull]
    rebase = false
[commit]
  template = ~/.gitmessage
  gpgsign = true
[tag]
  gpgSign = true
[difftool "ediff"]
    cmd = emacsclient -n -a \"\" --eval \"(ediff-files \\\"$LOCAL\\\" \\\"$REMOTE\\\")\"
[mergetool "ediff"]
    cmd = emacsclient -n -a \"\" --eval \"(ediff-merge-files-with-ancestor \\\"$LOCAL\\\" \\\"$REMOTE\\\" \\\"$BASE\\\" nil \\\"$MERGED\\\")\"
[init]
    defaultBranch = master
    templateDir = ~/.config/git/templates
[submodule]
    recurse = true
[filter "lfs"]
    required = true
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
    required = true
